<div class="card">
  <div class="card-header">
    <h5 class="card-title"> <b> Tarefa </b> </h5>
  </div>
  <div class="card-body">
   	<div class="container col-3 ml-0">
      <div class="row">
        <div class="col-5">
          Título:
        </div>
        <div class="col-7">
          <%= @task.title %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          Descrição:
        </div>
        <div class="col-7">
          <%= @task.description %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          Entrega:
        </div>
        <div class="col-7">
          <%= is_date(@task.delivery) %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          Criada
        </div>
        <div class="col-7">
            <%= is_date(@task.created_at) %>
        </div>
      </div>
    </div>
   </div>
</div>
